{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node", "jest"]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": ["dist", "node_modules", "artifacts"]
}
